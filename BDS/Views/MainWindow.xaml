<Window x:Class="BDS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDS"
        xmlns:viewModels="clr-namespace:BDS.ViewModels"
        xmlns:models="clr-namespace:BusinessLogic.Models;assembly=BusinessLogic"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Система медико-биологической диагностики" 
        Height="750" Width="900"
        Background="#505050"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        x:Name="MainWindowApp"
        MouseLeftButtonDown="MainWindow_OnMouseLeftButtonDown"
        d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
>
    <Window.Resources>
        <Style x:Key="StyleTabItem" TargetType="TabItem">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid Background="#B8A4CE">
                            <TextBlock 
                                Text="{Binding }"
                                ></TextBlock>
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="10 0 10 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" HorizontalAlignment="Right"
                   Margin="0 0 0  5">
            <Button DockPanel.Dock="Right" 
                    Style="{StaticResource HighButtonStyle}"
                    Background="#B84D4D"
                    Command="{Binding CloseAppCommand}"
                    CommandParameter="{Binding ElementName=MainWindowApp}">
                <Image Source="{StaticResource CloseIcon}" 
                       Height="15"></Image>
            </Button>
            <Button DockPanel.Dock="Right"
                    Style="{StaticResource HighButtonStyle}"
                    Background="#6B6B6B"
                    Command="{Binding ResizeAppCommand}"
                    CommandParameter="{Binding ElementName=MainWindowApp}">
                <Image Source="{StaticResource ResizeIcon}" 
                       Height="15"></Image>
            </Button>
            <Button DockPanel.Dock="Right"
                    Style="{StaticResource HighButtonStyle}"
                    Background="#6B6B6B"
                    Command="{Binding RollupAppCommand}"
                    CommandParameter="{Binding ElementName=MainWindowApp}">
                <Image Source="{StaticResource HideIcon}" 
                       Height="15" Width="20"></Image>
            </Button>
        </DockPanel>
        <TabControl Grid.Row="1" 
                    BorderBrush="#8A888B" 
                    Background="#8A888B"
                    BorderThickness="1">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="FontSize" Value="16"></Setter>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Margin" Value=" 0 0"></Setter>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" BorderThickness="0" 
                                        BorderBrush="Transparent" 
                                        CornerRadius="6,6,0,0" Margin="15,0">
                                    <ContentPresenter x:Name="ContentSite"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"
                                                      ContentSource="Header"
                                                      Margin="10,2"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#B8A4CE" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="#8A7A9B" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem Header="Метод сигмальных отклонений">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="15*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="0"
                            Grid.Column="0"
                            CornerRadius="15"
                            Height="30"
                            Background="#505050">
                        <Grid VerticalAlignment="Center"
                              Height="30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="8*"/>
                                <ColumnDefinition Width="4*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Margin="10, 0"
                                       VerticalAlignment="Center"
                                       Text="Путь к файлу:">
                            </TextBlock>
                            <Button Grid.Column="2"
                                    Content="Загрузить"
                                    Background="#6B427E"
                                    Foreground="White"
                                    Padding="8 0">
                                <Button.Resources>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding FilePath}" Value="{x:Null}"></DataTrigger>
                                            <Trigger Property="IsEnabled" Value="True">
                                                <Setter Property="Foreground" Value="Gray"></Setter>
                                                <Setter Property="Background" Value="Red"></Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Resources>
                                <Button.Template>
                                    <ControlTemplate>
                                        <Border CornerRadius="10"
                                                Background="{TemplateBinding Button.Background}">
                                            <Button Content="{TemplateBinding Button.Content}"
                                                    Foreground="{TemplateBinding Button.Foreground}"
                                                    Padding="{TemplateBinding Button.Padding}"
                                                    HorizontalContentAlignment="Right"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    BorderBrush="Transparent"></Button>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <TextBox Grid.Column="1" 
                                     Grid.ColumnSpan="2"
                                     Width="400"
                                     HorizontalAlignment="Left"
                                     Margin="10  0"
                                     Foreground="White"
                                     IsReadOnly="True"
                                     Text="{Binding FilePath, Mode=OneWay}">
                                <TextBox.Template>
                                    <ControlTemplate>
                                        <Border CornerRadius="10" 
                                                Padding="0"
                                                Height="{TemplateBinding TextBox.Height}"
                                                Width="{TemplateBinding TextBox.Width}"
                                                Background="#A5A5A5">
                                            <DockPanel>
                                                <TextBox Text="{TemplateBinding TextBox.Text}"
                                                         Foreground="{TemplateBinding TextBox.Foreground}"
                                                         VerticalAlignment="Center"
                                                         Padding="10 0"
                                                         BorderThickness="0"
                                                         BorderBrush="Transparent"
                                                         Background="Transparent"></TextBox>
                                                <Border Background="#505050"
                                                        Width="50"
                                                        Height="25"
                                                        HorizontalAlignment="Right"
                                                        Margin="10, 0"
                                                        CornerRadius="10">
                                                    <Button Content="..."
                                                            Command="{Binding OpenExcelFile}"
                                                            Background="Transparent"
                                                            BorderBrush="Transparent"
                                                            BorderThickness="0"
                                                            Foreground="White"></Button>
                                                </Border>
                                            </DockPanel>
                                        </Border>
                                    </ControlTemplate>
                                </TextBox.Template>
                            </TextBox>
                        </Grid>
                    </Border>
                </Grid>
