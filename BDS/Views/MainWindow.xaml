<Window x:Class="BDS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDS"
        mc:Ignorable="d"
        Title="Система медико-биологической диагностики" 
        Height="550" Width="900"
        Background="#505050"
        WindowStartupLocation="CenterScreen"
        >
    <Window.Resources>
        <Style x:Key="StyleTabItem" TargetType="TabItem">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid Background="#B8A4CE">
                            <TextBlock 
                                Text="{Binding }"
                                ></TextBlock>
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <TabControl>
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="FontSize" Value="16"></Setter>
                    <Setter Property="Margin" Value=" 0 0"></Setter>
                    <Setter Property="Content">
                        <Setter.Value>
                            <Grid Background="#8A888B"></Grid>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" BorderThickness="0" 
                                        BorderBrush="Transparent" 
                                        CornerRadius="6,6,0,0" Margin="15,0">
                                    <ContentPresenter x:Name="ContentSite"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"
                                                      ContentSource="Header"
                                                      Margin="10,2"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#B8A4CE" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="#8A7A9B" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem Header="Метод сигмальных отклонений">
            </TabItem>
            <TabItem Header="Метод Вальда">
                
            </TabItem>
            <TabItem Header="Неизвестный метод"></TabItem>
            <TabItem Header="Сравнительная оценка"></TabItem>
        </TabControl>
    </Grid>
</Window>
