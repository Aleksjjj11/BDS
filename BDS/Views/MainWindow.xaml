<Window x:Class="BDS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDS"
        xmlns:viewModels="clr-namespace:BDS.ViewModels"
        mc:Ignorable="d"
        Title="Система медико-биологической диагностики" 
        Height="750" Width="900"
        Background="#505050"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        x:Name="MainWindowApp"
        MouseLeftButtonDown="MainWindow_OnMouseLeftButtonDown"
        d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
>
    <Window.Resources>
        <Style x:Key="StyleTabItem" TargetType="TabItem">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid Background="#B8A4CE">
                            <TextBlock 
                                Text="{Binding }"
                                ></TextBlock>
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="10 0 10 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" HorizontalAlignment="Right"
                   Margin="0 0 0  5">
            <Button DockPanel.Dock="Right" 
                    Style="{StaticResource HighButtonStyle}"
                    Background="#B84D4D"
                    Command="{Binding CloseAppCommand}"
                    CommandParameter="{Binding ElementName=MainWindowApp}">
                <Image Source="{StaticResource CloseIcon}" 
                       Height="15"></Image>
            </Button>
            <Button DockPanel.Dock="Right"
                    Style="{StaticResource HighButtonStyle}"
                    Background="#6B6B6B"
                    Command="{Binding ResizeAppCommand}"
                    CommandParameter="{Binding ElementName=MainWindowApp}">
                <Image Source="{StaticResource ResizeIcon}" 
                       Height="15"></Image>
            </Button>
            <Button DockPanel.Dock="Right"
                    Style="{StaticResource HighButtonStyle}"
                    Background="#6B6B6B"
                    Command="{Binding RollupAppCommand}"
                    CommandParameter="{Binding ElementName=MainWindowApp}">
                <Image Source="{StaticResource HideIcon}" 
                       Height="15" Width="20"></Image>
            </Button>
        </DockPanel>
        <TabControl Grid.Row="1" 
                    BorderBrush="#8A888B" 
                    Background="#8A888B"
                    BorderThickness="1">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="FontSize" Value="16"></Setter>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Margin" Value=" 0 0"></Setter>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" BorderThickness="0" 
                                        BorderBrush="Transparent" 
                                        CornerRadius="6,6,0,0" Margin="15,0">
                                    <ContentPresenter x:Name="ContentSite"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"
                                                      ContentSource="Header"
                                                      Margin="10,2"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#B8A4CE" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="#8A7A9B" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem Header="Метод сигмальных отклонений">
                <Grid Background="#8A888B">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical"
                                            Grid.Column="0"
                                            Margin="0 15 0 0">
                        <Border Background="#A5A5A5"
                                            CornerRadius="15"
                                            BorderThickness="2"
                                            Margin="20 10"
                                            VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    ClipToBounds="True"
                                                    Height="40">
                                <TextBlock FontSize="20" 
                                                       VerticalAlignment="Center"
                                                       Margin="5 0"
                                                       Text="Введите число показателей:"></TextBlock>
                                <TextBox Style="{StaticResource TextBoxStyle}"
                                                     Text="{Binding CountIndicator,
                                                         Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                     Width="75" Height="25"
                                                     Margin="0"
                                                     TextAlignment="Center">
                                </TextBox>
                                <Button Content="OK" Margin="5 0"
                                                    Height="30" Width="45"
                                                    Style="{StaticResource ButtonStyle}">

                                </Button>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource BorderCircleStyle}"
                                            Margin="10">
                            <DataGrid Height="150"
                                                  HeadersVisibility="None"
                                                  HorizontalGridLinesBrush="#8A888B"
                                                  VerticalGridLinesBrush="#8A888B"
                                                  RowBackground="Transparent"
                                                  BorderThickness="0"
                                                  Background="Transparent"
                                                  Foreground="White"
                                                  VerticalScrollBarVisibility="Hidden"
                                                  HorizontalScrollBarVisibility="Disabled"
                                                  ItemsSource="{Binding ValuesParams,
                                                  Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            </DataGrid>
                        </Border>
                        <Button Content="Расчитать" 
                                            Height="30" Width="120"
                                            Margin="20 10"
                                            HorizontalAlignment="Left"
                                            Style="{StaticResource ButtonStyle}">
                        </Button>
                        <Border Style="{StaticResource BorderCircleStyle}"
                                            Margin="20">
                            <DataGrid Height="150"
                                                  ColumnWidth="150"
                                                  RowHeight="40"
                                                  GridLinesVisibility="None"
                                                  RowBackground="Transparent"
                                                  HeadersVisibility="Column"
                                                  BorderThickness="0"
                                                  Background="Transparent"
                                                  Foreground="White"
                                                  VerticalScrollBarVisibility="Hidden"
                                                  HorizontalScrollBarVisibility="Disabled"
                                                  ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}"
                                                  ItemsSource="{Binding Parameters,
                                                  Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">

                            </DataGrid>
                        </Border>
                        <Border Style="{StaticResource BorderCircleStyle}"
                                            Margin="20 10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Column="0" Width="250"
                                                      Text="Для вывода графика динамики показателей введите номер характеристики и нажмите кнопку ПОКАЗАТЬ" 
                                                      TextWrapping="Wrap"
                                                      TextAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" 
                                                         Text="{Binding NumberOfParameter,
                                                         Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                         Style="{StaticResource TextBoxStyle}"
                                                         Width="100"
                                                         Height="30"
                                                         FontSize="20">
                                    </TextBox>
                                    <Button Grid.Column="1" 
                                                    Content="Показать" 
                                                    Height="30" Width="120"
                                                    Margin="20 10"
                                                    HorizontalAlignment="Left"
                                                    Style="{StaticResource ButtonStyle}">
                                    </Button>
                                </Grid>
                            </Grid>
                        </Border>
                    </StackPanel>
                    <Border Grid.Column="1"
                                    Style="{StaticResource BorderCircleStyle}"
                                    Margin="20"
                                    Height="625">
                        <Grid>

                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="Метод Вальда">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="9*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Row="0" Grid.Column="0" 
                            Grid.ColumnSpan="4"
                            Background="#A5A5A5"
                            CornerRadius="15"
                            BorderThickness="2"
                            Margin="20 10"
                            VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    ClipToBounds="True"
                                    Height="40">
                            <TextBlock FontSize="20" 
                                       VerticalAlignment="Center"
                                       Margin="5 0"
                                       Text="Введите число показателей:"></TextBlock>
                            <TextBox Style="{StaticResource TextBoxStyle}"
                                     Text="{Binding CountIndicator,
                                                         Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Width="75" Height="25"
                                     Margin="0"
                                     TextAlignment="Center">
                            </TextBox>
                            <Button Content="OK" Margin="5 0"
                                    Height="30" Width="45"
                                    Style="{StaticResource ButtonStyle}">

                            </Button>
                        </StackPanel>
                    </Border>
                    <Button Grid.Row="0" Grid.Column="5"
                            Grid.ColumnSpan="2"
                            Style="{StaticResource ButtonStyle}"
                            VerticalAlignment="Bottom"
                            Content="Расчитать" 
                            Height="30" Width="200"
                            Margin="20 10"
                            HorizontalAlignment="Left">
                    </Button>
                    <Border Grid.Row="1" Grid.Column="0"
                            Grid.ColumnSpan="7"
                            VerticalAlignment="Top"
                            Style="{StaticResource BorderCircleStyle}"
                            Margin="20">
                        <DataGrid Height="150"
                                  ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}"
                                  ColumnWidth="150"
                                  RowHeight="40"
                                  RowBackground="Transparent"
                                  HeadersVisibility="Column"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  Foreground="White"
                                  VerticalScrollBarVisibility="Hidden"
                                  HorizontalScrollBarVisibility="Disabled"
                                  ItemsSource="{Binding Parameters,
                                                  Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">

                        </DataGrid>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="Неизвестный метод">
                <Grid></Grid>
            </TabItem>
            <TabItem Header="Сравнительная оценка">
                <Grid></Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
